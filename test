# List of top-level folders to create
$folders = @(
    "folder1/",
    "folder2/",
    "folder3/",
    "folder4/"
)

# Create the folders (using a dummy file to simulate the folder)
foreach ($folder in $folders) {
    $blob = New-AzStorageBlob -Container $containerName -Context $context -File "C:\path\to\a\dummy\file.txt" -Blob $folder
    Write-Host "Created folder: $folder"
}
